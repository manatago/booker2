<% user = @book && controller.controller_name == 'books' ? @book.user : (@user && controller.controller_name=='users' && controller.action_name=='show' ?  @user : current_user)  %>

<table class='table'>
  <tr><%= image_tag current_user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>forllows</th>
    <th>
      <%= link_to follow_list_path(user) do %>
      <%= user.follows.length %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to follower_list_path(user) do %>
      <%= user.followers.length %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <div class='col-6'>
    <%= render partial: 'users/follow_button',locals: {user: user } %>
  </div>
  <div class='col-6'>
    <% if current_user.is_followed_by(user) && user.is_followed_by(current_user) %>
    <%= link_to "Chat", messages_path(current_user,user) %>
    <% end %>
  </div>
</div>
