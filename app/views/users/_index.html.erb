<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数<%= user.follows.length %></td>
        <td>フォロワー数<%= user.followers.length %></td>
        <td>
          <% if user.followers.pluck('follower_id').include?(current_user.id) %>
          <%= link_to 'フォロー外す', relationship_path(:id=>user.id), method: :delete %>
          <% else %>
          <%= link_to 'フォローする', relationships_path(:id=>user.id), method: :post %>
          <% end %>
          
        </td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
